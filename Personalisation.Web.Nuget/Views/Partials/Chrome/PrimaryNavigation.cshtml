@inherits UmbracoViewPage<INavigation>
@if (Model == null) { return; }

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="~/">Personalisation - nuget</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        @if (Model.MenuItems != null && Model.MenuItems.Any())
        {
            <ul class="navbar-nav mr-auto">
                @foreach (var item in Model.MenuItems)
                {
                    <li class="nav-item @(item.IsAncestorOrSelfWithClass(Model, "active"))">
                        <a href="@item.Url" class="nav-link">@item.Name</a>
                    </li>
                }

                <li class="nav-item">
                    @Html.ActionLink("Abandon Session", "AbandonSession", "PersonalisationSurface", new { area = "personalisation" }, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Clear Session", "ClearSession", "PersonalisationSurface", new { area = "personalisation" }, new { @class = "nav-link" })
                </li>
            </ul>
        }
    </div>
</nav>
